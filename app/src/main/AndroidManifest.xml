<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tal.android.talpingpong">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tal.android.talpingpong.ui.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity
            android:name="com.tal.android.talpingpong.ui.activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tal.android.talpingpong.ui.activities.LoginActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>
